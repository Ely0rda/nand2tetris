/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a,b=b,sum=su,carry=ca);
    HalfAdder(a=c,b=su,sum=sum,carry=ca1);
    Or(a=ca1,b=ca,out=carry);
}